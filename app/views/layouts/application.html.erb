<!DOCTYPE html>
<html>
  <head>
    <title>FakeTwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

    

    <% if flash[:notice] %>
      <p><%= notice %></p>   
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= alert %></p>
    <% end %>
   
    <nav class="navbar">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1>Twitter</h1>
        <% if user_signed_in? %>
        <h4><%= link_to "Manage Account", edit_user_registration_path, class: "navbar-item" %></h4>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "h7" %>
    <% else %>
        <%= link_to 'Login', new_user_session_path, class: "h7" %>
        <% end %>
      <% end %>
    </nav>


  
    <%= yield %>
 
  </body>
</html>
