
<div class="container">
<% if user_signed_in? %>
  <h3><%= current_user.username %></h3>
  <p>You have <%= current_user.followers.count %> Followers</p>
<% end %>
<br>
<br>
<%= button_to "Create Tweet", new_tweet_path(@tweets), class: "btn btn-primary" %>
<br>
<br>

<ul>
<% @tweets.reverse.each do |tweet| %>
  <strong><%= link_to tweet.user.email, thisuser_path(tweet.user_id) %></strong>
<p><%= tweet.content %></p>
<br>
<br>
<b>Tweeted at</b><%= tweet.created_at.strftime("%d %b %Y at %I:%M %p") %>
<br>



— — — — — — — — — — — — — — — — — — — — — — — — — — — -
<br>
<%= link_to 'Show Tweet', tweet %>

<% if user_signed_in? %>
  <% if current_user.following?(tweet.user) %>
    <%= button_to "Unfollow", relationships_path(user_id: @user.id), method: :delete, :class => "btn btn-default" %>
  <% else %>
    <%= button_to "Follow", relationships_path(user_id: tweet.user), :class => "btn btn-primary" %>
  <% end %>
<% end %>
<br>
<br>
<% end %>
</ul>

</div>





